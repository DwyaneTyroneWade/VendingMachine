<?xml version="1.0" encoding="utf-8"?>
<com.curry.vendingmachine.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        percent:layout_widthPercent="10%sw"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/good_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/breakdown" />
    </LinearLayout>

</com.curry.vendingmachine.percent.PercentLinearLayout>
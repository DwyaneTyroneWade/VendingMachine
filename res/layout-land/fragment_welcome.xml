<com.curry.vendingmachine.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color_pink"
    android:orientation="vertical" >

    <com.curry.vendingmachine.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        percent:layout_heightPercent="66.67%h"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tv_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            percent:layout_heightPercent="72%h"
            percent:layout_widthPercent="70%h"
            android:src="@drawable/ic_welcome_whole" />
    </com.curry.vendingmachine.percent.PercentLinearLayout>

    <com.curry.vendingmachine.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        percent:layout_heightPercent="22.8%h"
        android:background="@color/bg_color_light_pink"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="@string/main_sub_title"
            android:textColor="@color/text_color_light_purple"
            android:textSize="15sp" />
    </com.curry.vendingmachine.percent.PercentLinearLayout>

</com.curry.vendingmachine.percent.PercentLinearLayout>